<?xml version="1.0" encoding="utf-8"?>
<layout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_bg"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_12sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="#fff"
                    android:orientation="vertical">

                    <hrms.hrms.widget.TextView
                        style="@style/spinnerHeader"
                        android:text="@string/shift_name" />

                    <RelativeLayout style="@style/SpinnerRl">

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/edit_shift_spn_name"
                            style="@style/Spinner"
                            android:layout_width="wrap_content">

                        </androidx.appcompat.widget.AppCompatSpinner>
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_12sdp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:orientation="vertical">

                    <hrms.hrms.widget.TextView
                        style="@style/spinnerHeader"
                        android:text="@string/from_date" />

                    <RelativeLayout
                        android:id="@+id/fragment_edit_shift_form_rl_form_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@drawable/bottomline">

                        <hrms.hrms.widget.TextView
                            android:id="@+id/fragment_edit_shift_form_tv_form_date"
                            style="@style/SpinnerBody"
                            android:text="13-10-1992"/>

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_alignParentRight="true"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/ic_calendar" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:orientation="vertical">

                    <hrms.hrms.widget.TextView
                        style="@style/spinnerHeader"
                        android:text="@string/to_date" />

                    <RelativeLayout
                        android:id="@+id/fragment_edit_shift_form_rl_to_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@drawable/bottomline">

                        <hrms.hrms.widget.TextView
                            android:id="@+id/fragment_edit_shift_form_tv_to_date"
                            style="@style/SpinnerBody"
                            android:text="13-10-1992" />

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_alignParentRight="true"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/ic_calendar" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/linearDescription">

                <hrms.hrms.widget.TextView
                    style="@style/spinnerHeader"
                    android:text="@string/reason_details" />

                <hrms.hrms.widget.EditText
                    android:id="@+id/fragment_edit_shift_form_tv_desc"
                    style="@style/spinnerBodyMultiline"
                    android:hint="I Will Be On Vacation">

                </hrms.hrms.widget.EditText>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:orientation="horizontal">

                <hrms.hrms.widget.TextView
                    android:id="@+id/fragment_edit_shift_tv_submit"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="@string/submit"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14sdp"
                    app:font_type="@string/gotham_medium"
                    style="@style/Material.Drawable.Ripple.Wave.Light"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1" />

                <hrms.hrms.widget.TextView
                    android:id="@+id/fragment_edit_shift_tv_reset"
                    style="@style/Material.Drawable.Ripple.Wave.Light"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="@string/reset"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14sdp"
                    app:font_type="@string/gotham_medium" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</layout>