<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <LinearLayout
            android:id="@+id/frg_request_leave_details_ll_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <hrms.hrms.widget.TextView
                android:id="@+id/frg_request_leave_details_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingLeft="@dimen/_13sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="Privellage Leave"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                app:font_type="@string/gotham_book" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/frg_request_rv_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <hrms.hrms.widget.TextView
                android:id="@+id/frg_request_leave_details_tv_reson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/request_leave_type_text"
                android:textSize="@dimen/_11sdp"
                app:font_type="@string/gotham_book" />

            <hrms.hrms.widget.TextView
                android:id="@+id/frg_request_leave_details_tv_manager_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_40sdp"
                android:paddingTop="@dimen/_10sdp"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                app:font_type="@string/gotham_book" />

            <hrms.hrms.widget.TextView
                android:id="@+id/frg_request_leave_details_tv_manager_reson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingLeft="@dimen/_40sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:textColor="@color/request_leave_type_text"
                android:textSize="@dimen/_11sdp"
                app:font_type="@string/gotham_book" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <hrms.hrms.widget.TextView
                android:id="@+id/frg_request_leave_details_tv_cancel"
                style="@style/Material.Drawable.Ripple.Wave"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/colorAccent"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/str_cancel"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_13sdp"
                android:visibility="invisible"
                app:font_type="@string/gotham_medium" />

        </LinearLayout>

    </LinearLayout>
</layout>