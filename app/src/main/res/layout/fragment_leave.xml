<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/frg_leave_rl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_bg">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/fragment_leave_tv_apply_leave"
            android:layout_marginBottom="@dimen/_6sdp"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_12sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="vertical">

                    <RelativeLayout style="@style/table_title_bg">

                        <hrms.hrms.widget.TextView
                            style="@style/table_title_text"
                            android:text="@string/annual_leave" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:background="@android:color/white"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <hrms.hrms.widget.TextView
                                android:id="@+id/frg_leave_tv_taken"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="@dimen/_25sdp"
                                app:font_type="@string/gotham_medium" />

                            <hrms.hrms.widget.TextView
                                style="@style/annual_leave_bottom_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/taken" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:background="@color/view_line" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <hrms.hrms.widget.TextView
                                android:id="@+id/frg_leave_tv_balance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20"
                                android:textSize="@dimen/_25sdp"
                                app:font_type="@string/gotham_medium" />

                            <hrms.hrms.widget.TextView
                                style="@style/annual_leave_bottom_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/balance" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:background="@color/view_line" />

                        <LinearLayout
                            android:id="@+id/frg_leave_ll_pending"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <hrms.hrms.widget.TextView
                                android:id="@+id/frg_leave_tv_pending"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textSize="@dimen/_25sdp"
                                app:font_type="@string/gotham_medium" />

                            <hrms.hrms.widget.TextView
                                style="@style/annual_leave_bottom_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pending_approved" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:orientation="vertical">

                    <RelativeLayout style="@style/table_title_bg">

                        <hrms.hrms.widget.TextView
                            style="@style/table_title_text"
                            android:text="@string/leave_details" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/fragment_leave_view_line"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/view_line" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/fragment_leave_rv_leave"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                        <hrms.hrms.widget.TextView
                            android:id="@+id/frg_leave_tv_no_data"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_40sdp"
                            android:gravity="center"
                            android:text="@string/no_data"
                            android:textColor="@color/login_tv_hint"
                            android:textSize="@dimen/_20sdp"
                            app:font_type="@string/gotham_medium" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <hrms.hrms.widget.TextView
            android:id="@+id/fragment_leave_tv_apply_leave"
            style="@style/btn_submit"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:text="@string/apply_leave"
            android:textAllCaps="true"
            android:visibility="gone" />
    </RelativeLayout>
</layout>