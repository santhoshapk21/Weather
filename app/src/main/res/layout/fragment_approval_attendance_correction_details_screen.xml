<?xml version="1.0" encoding="utf-8"?>

<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <hrms.hrms.widget.TextView
                    android:id="@+id/frg_approval_attendance_correction_details_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_13sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:text="Privellage Leave"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_14sdp"
                    app:font_type="@string/gotham_book" />

                <hrms.hrms.widget.TextView
                    android:id="@+id/frg_approval_attendance_correction_details_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_13sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:text="Night Shift"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    app:font_type="@string/gotham_book" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="match_parent"
                        android:background="@color/blue" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:gravity="center">

                        <com.rey.material.widget.ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:src="@drawable/ic_clock_dark" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_14sdp"
                            android:orientation="vertical">

                            <hrms.hrms.widget.TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_4sdp"
                                android:text="@string/str_time"
                                android:textColor="@color/request_leave_type_text"
                                android:textSize="@dimen/_9sdp"
                                app:font_type="@string/gotham_book" />

                            <hrms.hrms.widget.TextView
                                android:id="@+id/frg_approval_attendance_correction_details_tv_from_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_4sdp"
                                android:textColor="@color/request_leave_heading_text"
                                android:textSize="@dimen/_12sdp"
                                app:font_type="@string/gotham_book" />

                        </LinearLayout>

                        <com.rey.material.widget.ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_marginLeft="@dimen/_28sdp"
                            android:src="@drawable/ic_calendar_dark" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_14sdp"
                            android:orientation="vertical">

                            <hrms.hrms.widget.TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_4sdp"
                                android:text="@string/str_date"
                                android:textColor="@color/request_leave_type_text"
                                android:textSize="@dimen/_9sdp"
                                app:font_type="@string/gotham_book" />

                            <hrms.hrms.widget.TextView
                                android:id="@+id/frg_approval_attendance_correction_details_tv_from_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_4sdp"
                                android:textColor="@color/request_leave_heading_text"
                                android:textSize="@dimen/_12sdp"
                                app:font_type="@string/gotham_book" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <hrms.hrms.widget.TextView
                    android:id="@+id/frg_approval_attendance_correction_details_tv_reson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/request_leave_type_text"
                    android:textSize="@dimen/_11sdp"
                    app:font_type="@string/gotham_book" />

                <hrms.hrms.widget.TextView
                    android:id="@+id/frg_approval_mark_attendace_details_tv_manager_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_40sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    app:font_type="@string/gotham_book" />

                <hrms.hrms.widget.TextView
                    android:id="@+id/frg_request_attendance_correction_details_tv_manager_reson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_40sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:textColor="@color/request_leave_type_text"
                    android:textSize="@dimen/_11sdp"
                    app:font_type="@string/gotham_book" />

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <hrms.hrms.widget.EditText
                android:id="@+id/frg_approvals_et_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:focusableInTouchMode="true"
                android:background="@drawable/bottomline"
                android:gravity="left|center"
                android:hint="@string/type_your_message"
                android:paddingBottom="@dimen/_8sdp"
                android:paddingTop="@dimen/_8sdp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                app:font_type="@string/gotham" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <hrms.hrms.widget.TextView
                    android:id="@+id/frg_approvals_tv_submit"
                    style="@style/Material.Drawable.Ripple.Wave"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/frg_approvals_details_ll_main"
                    android:layout_weight="1"
                    android:background="@color/present_green"
                    android:gravity="center"
                    android:text="@string/str_accepted"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_13sdp"
                    app:font_type="@string/gotham_medium" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1" />

                <hrms.hrms.widget.TextView
                    android:id="@+id/frg_approvals_tv_reject"
                    style="@style/Material.Drawable.Ripple.Wave"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:text="@string/str_reject"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_13sdp"
                    app:font_type="@string/gotham_medium" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>