<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/row_approval_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <hrms.hrms.widget.CircleImageView
                    android:id="@+id/row_approval_iv_avatar"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:src="@drawable/img_user" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/bottomline"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/_6sdp">

                    <hrms.hrms.widget.TextView
                        android:id="@+id/row_approval_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_4sdp"
                        android:text="Robot Richardson"
                        android:textColor="@color/text_emp_title"
                        android:textSize="@dimen/_14sdp"
                        app:font_type="@string/gotham_medium" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/row_approval_tv_name"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:padding="@dimen/_4sdp"
                                android:src="@drawable/ic_calander_primary" />

                            <hrms.hrms.widget.TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:padding="@dimen/_4sdp"
                                android:text="Oct 13,2016"
                                android:textColor="@color/text_emp_title"
                                android:textSize="@dimen/_11sdp"
                                app:font_type="@string/gotham_book" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/row_approval_iv_vacation"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:padding="@dimen/_4sdp"
                                android:src="@drawable/ic_vacation" />

                            <hrms.hrms.widget.TextView
                                android:id="@+id/row_approval_tv_vacation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:padding="@dimen/_4sdp"
                                android:text="24 Hour of Vacation"
                                android:textColor="@color/text_emp_title"
                                android:textSize="@dimen/_11sdp"
                                app:font_type="@string/gotham_book" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:padding="@dimen/_4sdp"
                                android:src="@drawable/ic_chat" />

                            <hrms.hrms.widget.TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:padding="@dimen/_4sdp"
                                android:text="I will be on vacation for ladakh trip with friend and i will join new project after that"
                                android:textColor="@color/text_emp_title"
                                android:textSize="@dimen/_11sdp"
                                app:font_type="@string/gotham_book" />


                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</layout>