<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/fragment_attendance_request_sv_mainScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:descendantFocusability="beforeDescendants"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="@dimen/_12sdp">

            <!--android:visibility="invisible"-->

            <hrms.hris365.calendar.RobotoCalendarTextView
                android:id="@+id/fragment_attendance_robot_calnder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white" />

            <androidx.cardview.widget.CardView
                android:id="@+id/frg_attendance_cv_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginRight="@dimen/_18sdp"
                card_view:cardCornerRadius="@dimen/_8sdp"
                card_view:cardElevation="@dimen/_3sdp">

                <LinearLayout
                    android:id="@+id/frg_attendance_ll_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <hrms.hrms.widget.TextView
                            android:id="@+id/frg_attendance_tv_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/frg_attendance_iv_correction"
                            android:padding="@dimen/_12sdp"
                            android:textColor="#484848"
                            android:textSize="@dimen/_12sdp"
                            app:font_type="@string/gotham_book" />

                        <ImageView
                            android:id="@+id/frg_attendance_iv_correction"
                            android:layout_width="@dimen/_38sdp"
                            android:layout_height="@dimen/_38sdp"
                            android:layout_alignParentRight="true"
                            android:padding="@dimen/_5sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_request_btn" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/frg_attendance_ll_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:layout_width="@dimen/_2sdp"
                            android:layout_height="match_parent"
                            android:background="@color/gray" />

                        <hrms.hrms.widget.TextView
                            android:id="@+id/frg_attendance_tv_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:text=""
                            android:textColor="@color/attendance_text"
                            android:textSize="@dimen/_12sdp"
                            app:font_type="@string/gotham_book" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/frg_attendance_ll_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <View
                            android:layout_width="@dimen/_2sdp"
                            android:layout_height="match_parent"
                            android:background="@color/blue" />

                        <ImageView
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:src="@drawable/ic_clock_dark" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_weight="0.4"
                            android:orientation="vertical">

                            <hrms.hrms.widget.TextView
                                android:id="@+id/frg_attendance_tv_in_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_2sdp"
                                android:text=""
                                android:textColor="#5D5D5D"
                                android:textSize="@dimen/_11sdp"
                                app:font_type="@string/gotham_book" />

                            <hrms.hrms.widget.TextView
                                android:id="@+id/frg_attendance_tv_in_time_late"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_2sdp"
                                android:text=""
                                android:textColor="@color/red"
                                android:textSize="@dimen/_10sdp"
                                app:font_type="@string/gotham_book" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:layout_weight="0.4"
                            android:orientation="vertical">

                            <hrms.hrms.widget.TextView
                                android:id="@+id/frg_attendance_tv_out_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_2sdp"
                                android:text=""
                                android:textColor="#5D5D5D"
                                android:textSize="@dimen/_11sdp"
                                app:font_type="@string/gotham_book" />

                            <hrms.hrms.widget.TextView
                                android:id="@+id/frg_attendance_tv_out_time_late"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_2sdp"
                                android:text=""
                                android:textColor="@color/red"
                                android:textSize="@dimen/_10sdp"
                                app:font_type="@string/gotham_book" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/frg_attendance_ll_leave_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="@dimen/_2sdp"
                            android:layout_height="match_parent"
                            android:background="@color/yellow" />

                        <hrms.hrms.widget.TextView
                            android:id="@+id/frg_attendance_tv_leave_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:text=""
                            android:textColor="#484848"
                            android:textSize="@dimen/_12sdp"
                            app:font_type="@string/gotham_book" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>
</layout>

