<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <hrms.hrms.widget.TextView
                    android:id="@+id/frg_approval_claim_details_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_13sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_14sdp"
                    app:font_type="@string/gotham_book"
                    tools:text="abc-1032" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="match_parent"
                        android:background="@color/blue" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:gravity="center">

                        <com.rey.material.widget.ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:src="@drawable/ic_claims_unselected"
                            android:tint="@color/gray" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_14sdp"
                            android:orientation="vertical">

                            <hrms.hrms.widget.TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_4sdp"
                                android:text="@string/claim_type"
                                android:textColor="@color/request_leave_type_text"
                                android:textSize="@dimen/_9sdp"
                                app:font_type="@string/gotham_book" />

                            <hrms.hrms.widget.TextView
                                android:id="@+id/frg_row_approvals_claim_details_tv_claim_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_4sdp"
                                android:textColor="@color/request_leave_heading_text"
                                android:textSize="@dimen/_12sdp"
                                app:font_type="@string/gotham_book"
                                tools:text="jdasna" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:orientation="vertical">

                            <hrms.hrms.widget.TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_4sdp"
                                android:text="@string/amount"
                                android:textColor="@color/request_leave_type_text"
                                android:textSize="@dimen/_9sdp"
                                app:font_type="@string/gotham_book" />

                            <hrms.hrms.widget.TextView
                                android:id="@+id/frg_row_approvals_claim_details_tv_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_4sdp"
                                android:textColor="@color/request_leave_heading_text"
                                android:textSize="@dimen/_12sdp"
                                app:font_type="@string/gotham_book"
                                tools:text="jdasna" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/frg_approval_claim_details_ll_place_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="match_parent"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:gravity="center">

                        <com.rey.material.widget.ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:src="@drawable/ic_clock_dark"

                            android:tint="@color/gray" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_14sdp"
                            android:orientation="vertical">

                            <hrms.hrms.widget.TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_4sdp"
                                android:text="@string/from_place"
                                android:textColor="@color/request_leave_type_text"
                                android:textSize="@dimen/_9sdp"
                                app:font_type="@string/gotham_book" />

                            <hrms.hrms.widget.TextView
                                android:id="@+id/frg_row_approvals_claim_details_tv_from_place"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_4sdp"
                                android:textColor="@color/request_leave_heading_text"
                                android:textSize="@dimen/_12sdp"
                                app:font_type="@string/gotham_book"
                                tools:text="jdasna" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:orientation="vertical">

                            <hrms.hrms.widget.TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_4sdp"
                                android:text="@string/to_place"
                                android:textColor="@color/request_leave_type_text"
                                android:textSize="@dimen/_9sdp"
                                app:font_type="@string/gotham_book" />

                            <hrms.hrms.widget.TextView
                                android:id="@+id/frg_row_approvals_claim_details_tv_to_place"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_4sdp"
                                android:textColor="@color/request_leave_heading_text"
                                android:textSize="@dimen/_12sdp"
                                app:font_type="@string/gotham_book"
                                tools:text="jdasna" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/frg_approval_claim_details_ll_date_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="match_parent"
                        android:background="@color/blue" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:gravity="center">

                        <com.rey.material.widget.ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:src="@drawable/ic_calendar_dark"
                            android:tint="@color/gray" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_14sdp"
                            android:orientation="vertical">

                            <hrms.hrms.widget.TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_4sdp"
                                android:text="@string/str_from_date"
                                android:textColor="@color/request_leave_type_text"
                                android:textSize="@dimen/_9sdp"
                                app:font_type="@string/gotham_book" />

                            <hrms.hrms.widget.TextView
                                android:id="@+id/frg_row_approvals_claim_details_tv_from_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_4sdp"
                                android:textColor="@color/request_leave_heading_text"
                                android:textSize="@dimen/_12sdp"
                                app:font_type="@string/gotham_book"
                                tools:text="jdasna" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:orientation="vertical">

                            <hrms.hrms.widget.TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_4sdp"
                                android:text="@string/str_to_date"
                                android:textColor="@color/request_leave_type_text"
                                android:textSize="@dimen/_9sdp"
                                app:font_type="@string/gotham_book" />

                            <hrms.hrms.widget.TextView
                                android:id="@+id/frg_row_approvals_claim_details_tv_to_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_4sdp"
                                android:textColor="@color/request_leave_heading_text"
                                android:textSize="@dimen/_12sdp"
                                app:font_type="@string/gotham_book"
                                tools:text="jdasna" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/frg_row_approvals_claim_details_rv_expenses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/home_bg"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:scrollbars="vertical"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <hrms.hrms.widget.TextView
                    android:id="@+id/frg_approvals_tv_submit"
                    style="@style/Material.Drawable.Ripple.Wave"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/frg_approvals_details_ll_main"
                    android:layout_weight="1"
                    android:background="@color/present_green"
                    android:gravity="center"
                    android:text="@string/str_accepted"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_13sdp"
                    app:font_type="@string/gotham_medium" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1" />

                <hrms.hrms.widget.TextView
                    android:id="@+id/frg_approvals_tv_reject"
                    style="@style/Material.Drawable.Ripple.Wave"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:text="@string/str_reject"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_13sdp"
                    app:font_type="@string/gotham_medium" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>