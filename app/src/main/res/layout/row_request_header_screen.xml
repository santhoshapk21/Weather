<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/row_request_ll_header_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/row_request_iv_header_image"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:scaleType="fitXY" />

            <hrms.hrms.widget.TextView
                android:id="@+id/row_request_tv_header_title"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:maxLines="2"
                android:textSize="@dimen/_11sdp"
                app:font_type="@string/gotham_book" />

        </LinearLayout>

        <hrms.hrms.widget.TextView
            android:id="@+id/row_home_tv_notification_count"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="end|top"
            android:layout_marginRight="@dimen/_8sdp"
            android:background="@drawable/ic_request_count_circle"
            android:gravity="center"
            android:minWidth="@dimen/_25sdp"
            android:padding="@dimen/_4sdp"
            android:text="0"
            android:textColor="#3c4a64"
            app:font_type="@string/open_sarif" />
    </FrameLayout>
</layout>