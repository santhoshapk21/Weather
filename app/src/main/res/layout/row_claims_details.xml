<?xml version="1.0" encoding="utf-8"?>

<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/row_claim_ll_request_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3.6">

            <hrms.hrms.widget.TextView
                android:id="@+id/row_tv_claim_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="@string/claim_type"
                android:textSize="@dimen/_9sdp"
                app:font_type="@string/gotham_light" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/view_line" />

            <hrms.hrms.widget.TextView
                android:id="@+id/row_claim_tv_desc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="@string/description"
                android:textSize="@dimen/_9sdp"
                app:font_type="@string/gotham_light" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/view_line" />

            <hrms.hrms.widget.TextView
                android:id="@+id/row_claim_tv_amount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="@string/amount"
                android:textSize="@dimen/_9sdp"
                app:font_type="@string/gotham_light" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/view_line" />

            <LinearLayout
                android:id="@+id/row_claim_attachment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_document" />

                <ImageView
                    android:id="@+id/row_claim_iv_edit"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_edit" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/view_line" />
    </RelativeLayout>
</layout>