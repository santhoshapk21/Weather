<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/row_notification_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/row_notification_ll_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <hrms.hrms.widget.TextView
                android:id="@+id/row_notification_tv_txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/notify_bg"
                android:paddingBottom="@dimen/_7sdp"
                android:paddingLeft="@dimen/_16sdp"
                android:paddingTop="@dimen/_7sdp"
                android:text="Today"
                android:textColor="@color/menu_font_color"
                android:textSize="@dimen/_13sdp"
                app:font_type="@string/gotham_book" />

            <hrms.hrms.widget.TextView
                android:id="@+id/row_notification_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/notify_bg"
                android:paddingBottom="@dimen/_7sdp"
                android:paddingRight="@dimen/_16sdp"
                android:paddingTop="@dimen/_7sdp"
                android:text="13 Oct"
                android:textColor="@color/menu_font_color"
                android:textSize="@dimen/_13sdp"
                app:font_type="@string/gotham_book" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <hrms.hrms.widget.CircleImageView
                    android:id="@+id/row_notification_iv_avatar"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:src="@drawable/ic_another_user" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bottomline"
                    android:gravity="center_vertical">

                    <hrms.hrms.widget.TextView
                        android:id="@+id/row_notification_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:text="HR"
                        android:textColor="@color/text_emp_title"
                        android:textSize="@dimen/_12sdp"
                        app:font_type="@string/gotham_book" />

                    <hrms.hrms.widget.TextView
                        android:id="@+id/row_notification_tv_decision"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/row_notification_tv_name"
                        android:padding="@dimen/_2sdp"
                        android:text="declare leave"
                        android:textColor="#638c48"
                        android:textSize="@dimen/_12sdp"
                        app:font_type="@string/gotham_book" />

                    <hrms.hrms.widget.TextView
                        android:id="@+id/row_notification_tv_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/row_notification_tv_decision"
                        android:padding="@dimen/_2sdp"
                        android:text="for diwali"
                        android:textColor="@color/text_emp_title"
                        android:textSize="@dimen/_12sdp"
                        app:font_type="@string/gotham_medium" />

                    <hrms.hrms.widget.TextView
                        android:id="@+id/row_notification_tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/row_notification_tv_name"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:text="10 min ago"
                        android:textColor="@color/login_tv_hint"
                        android:textSize="@dimen/_11sdp"
                        app:font_type="@string/gotham_book" />

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</layout>