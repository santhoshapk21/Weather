    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_bg"
        android:clickable="true"
        android:elevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="visible"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/frg_approvals_rv_list_requests"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/home_bg"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp"
                android:visibility="visible" />


            <LinearLayout
                android:id="@+id/frg_ll_no_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_50sdp"
                android:orientation="vertical"
                android:visibility="gone">

                <hrms.hrms.widget.TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_120sdp"
                    android:gravity="center"
                    android:text="@string/no_data"
                    android:textColor="@color/login_tv_hint"
                    android:textSize="@dimen/_20sdp"
                    app:font_type="@string/gotham_medium" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/frg_approvals_ll_dialog_leave_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/red"
            android:visibility="gone">

            <hrms.hrms.widget.TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/_12sdp"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="@dimen/_12sdp"
                app:font_type="@string/gotham_medium" />

            <hrms.hrms.widget.TextView
                android:id="@+id/frg_approvals_tv_accept"
                style="@style/Material.Drawable.Ripple.Wave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/frg_approvals_tv_reject"
                android:padding="@dimen/_10sdp"
                android:text="@string/str_accepted"
                android:textColor="#72E623"
                android:textSize="@dimen/_12sdp"
                app:font_type="@string/gotham_medium" />

            <hrms.hrms.widget.TextView
                android:id="@+id/frg_approvals_tv_reject"
                style="@style/Material.Drawable.Ripple.Wave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/_10sdp"
                android:text="@string/str_reject"
                android:textColor="#ffffff"
                android:textSize="@dimen/_12sdp"
                app:font_type="@string/gotham_medium" />

        </LinearLayout>

        <com.google.android.material.appbar.AppBarLayout
