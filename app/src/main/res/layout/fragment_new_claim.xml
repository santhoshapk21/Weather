<?xml version="1.0" encoding="utf-8"?>
<layout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_bg"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_12sdp">

            <LinearLayout
                android:id="@+id/fragment_new_claim__ll_modeoftravel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@color/whiteBackground"
                android:orientation="vertical"
                android:visibility="gone">

                <hrms.hrms.widget.TextView

                    style="@style/spinnerHeader"
                    android:text="@string/mode_of_travel" />

                <RelativeLayout

                    style="@style/SpinnerRl">

                    <androidx.appcompat.widget.AppCompatSpinner

                        android:id="@+id/fragment_new_claim_spn_claim_modeoftravel"
                        style="@style/Spinner" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/whiteBackground">

                <RadioGroup
                    android:id="@+id/rg_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbtn_metro"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="@string/metro" />

                    <RadioButton
                        android:id="@+id/rbtn_nonmetro"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:text="@string/non_metro" />
                </RadioGroup>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/fragment_new_claim__rl_container_place"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/ll_form_place"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@color/whiteBackground"
                        android:orientation="vertical">

                        <hrms.hrms.widget.TextView
                            style="@style/spinnerHeader"

                            android:text="@string/from_place" />

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_12sdp"
                            android:background="@drawable/bottomline">

                            <hrms.hrms.widget.EditText
                                android:id="@+id/fragment_new_claim_ed_form_place"
                                style="@style/SpinnerBody"
                                android:layout_toLeftOf="@+id/iv_from_location"
                                android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                                android:hint="@string/ahemdabad"
                                android:inputType="textCapSentences|text" />

                            <ImageView
                                android:id="@+id/iv_from_location"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_alignParentRight="true"
                                android:padding="@dimen/_4sdp"
                                android:src="@drawable/ic_location" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/ll_form_place"
                        android:layout_weight="1"
                        android:background="@color/whiteBackground"
                        android:orientation="vertical">

                        <hrms.hrms.widget.TextView
                            style="@style/spinnerHeader"
                            android:text="@string/to_place" />

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_12sdp"
                            android:background="@drawable/bottomline">

                            <hrms.hrms.widget.EditText
                                android:id="@+id/fragment_new_claim_ed_to_place"
                                style="@style/SpinnerBody"
                                android:layout_toLeftOf="@+id/iv_to_location"
                                android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                                android:hint="@string/gandhinagar"
                                android:inputType="textCapSentences|text" />

                            <ImageView
                                android:id="@+id/iv_to_location"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_alignParentRight="true"
                                android:padding="@dimen/_4sdp"
                                android:src="@drawable/ic_location" />
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_23sdp"
                    android:layout_height="@dimen/_23sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle_primary"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_forward_arrow" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/fragment_new_claim__ll_container_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@color/whiteBackground"
                    android:orientation="vertical">

                    <hrms.hrms.widget.TextView
                        style="@style/spinnerHeader"
                        android:text="@string/from_date" />

                    <RelativeLayout
                        android:id="@+id/fragment_new_claim_rl_form_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:background="@drawable/bottomline">

                        <hrms.hrms.widget.TextView
                            android:id="@+id/fragment_new_claim_tv_form_date"
                            style="@style/SpinnerBody"
                            android:text="13-10-1992" />

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_alignParentRight="true"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/ic_calendar" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@color/whiteBackground"
                    android:orientation="vertical">

                    <hrms.hrms.widget.TextView
                        style="@style/spinnerHeader"
                        android:text="@string/to_date" />

                    <RelativeLayout
                        android:id="@+id/fragment_new_claim_rl_to_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:background="@drawable/bottomline">

                        <hrms.hrms.widget.TextView
                            android:id="@+id/fragment_new_claim__tv_to_date"
                            style="@style/SpinnerBody"
                            android:text="13-10-1992" />

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_alignParentRight="true"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/ic_calendar" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@color/whiteBackground"
                android:orientation="vertical"
                android:visibility="gone">

                <hrms.hrms.widget.TextView
                    style="@style/spinnerHeader"
                    android:text="@string/mode_of_travel" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_6sdp">

                    <LinearLayout
                        android:id="@+id/fragment_new_claim__ll_plane"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/fragment_new_claim__iv_plane"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_gravity="center"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/ic_plane" />

                        <hrms.hrms.widget.TextView
                            android:id="@+id/fragment_new_claim__tv_plane"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:singleLine="true"
                            android:text="@string/air"
                            android:textSize="@dimen/_10sdp"
                            app:font_type="@string/gotham_book" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragment_new_claim__ll_train"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/fragment_new_claim__iv_train"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_gravity="center"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/ic_train" />

                        <hrms.hrms.widget.TextView
                            android:id="@+id/fragment_new_claim__tv_train"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:singleLine="true"
                            android:text="@string/train"
                            android:textSize="@dimen/_10sdp"
                            app:font_type="@string/gotham_book" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragment_new_claim__ll_bus"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/fragment_new_claim__iv_bus"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_gravity="center"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/ic_bus" />

                        <hrms.hrms.widget.TextView
                            android:id="@+id/fragment_new_claim__tv_bus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:singleLine="true"
                            android:text="@string/bus"
                            android:textSize="@dimen/_10sdp"
                            app:font_type="@string/gotham_book" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragment_new_claim__ll_bike_car"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/fragment_new_claim__iv_bike_car"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_gravity="center"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/ic_car_bike" />


                        <hrms.hrms.widget.TextView
                            android:id="@+id/fragment_new_claim__tv_bike_car"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:singleLine="true"
                            android:text="@string/car_bike"
                            android:textSize="@dimen/_10sdp"
                            app:font_type="@string/gotham_book" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_new_claim_container_purpose_of_visit"
                style="@style/linearDescription"
                android:visibility="gone">

                <hrms.hrms.widget.TextView
                    style="@style/spinnerHeader"
                    android:text="@string/purpose_of_visit" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:background="@drawable/bottomline">

                    <hrms.hrms.widget.EditText
                        android:id="@+id/frgment_new_claim_details_ed_purpose_of_visit"
                        style="@style/SpinnerBody"
                        android:hint="Meeting"
                        android:inputType="textCapSentences" />

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/fragment_new_claim_container_eff_month_year"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/whiteBackground"
                android:orientation="vertical"
                android:visibility="gone">

                <hrms.hrms.widget.TextView
                    style="@style/spinnerHeader"
                    android:text="@string/effective_month_year" />

                <LinearLayout
                    android:id="@+id/fragment_new_claim_ll_eff_month_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whiteBackground"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <hrms.hrms.widget.TextView
                        android:id="@+id/fragment_new_claim_tv_month_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_8sdp"
                        android:text="September 2016"
                        android:textColor="@color/request_spinner_text_filter"
                        android:textSize="@dimen/_13sdp"
                        app:font_type="@string/gotham_book" />

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:src="@drawable/ic_spinner_qrrow" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <RelativeLayout style="@style/table_title_bg">

                    <hrms.hrms.widget.TextView
                        style="@style/table_title_text"
                        android:text="@string/claim_details" />

                    <ImageView
                        android:id="@+id/fragment_new_claim_iv_add_claim_details"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:padding="@dimen/_8sdp"
                        android:src="@drawable/ic_plus" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/fragment_new_claim_ll_claim_details"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@drawable/bottomline"
                    android:orientation="horizontal"
                    android:weightSum="3.6">

                    <hrms.hrms.widget.TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/claim_type"
                        android:textSize="@dimen/_10sdp"
                        app:font_type="@string/gotham_medium" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/view_line" />

                    <hrms.hrms.widget.TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"

                        android:text="@string/description"
                        android:textSize="@dimen/_10sdp"
                        app:font_type="@string/gotham_medium" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/view_line" />

                    <hrms.hrms.widget.TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/amount"
                        android:textSize="@dimen/_10sdp"
                        app:font_type="@string/gotham_medium" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/view_line" />

                    <hrms.hrms.widget.TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/attachment"
                        android:textSize="@dimen/_10sdp"
                        app:font_type="@string/gotham_medium" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fragment_new_claim_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

            <hrms.hrms.widget.TextView
                android:id="@+id/fragment_new_claim_tv_submit"
                style="@style/btn_submit"
                android:text="@string/submit"
                android:textAllCaps="true" />
        </LinearLayout>

    </ScrollView>
</layout>