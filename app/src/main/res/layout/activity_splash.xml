<?xml version="1.0" encoding="utf-8"?>

<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_splash_bg" />

        <ImageView
            android:id="@+id/iv_hris_text"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_hrms_365"
            android:transitionName="@string/transition_logo_hris" />


        <RelativeLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_above="@+id/iv_hris_text"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_20sdp"
            >

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_logo"
                android:transitionName="@string/transition_logo" />
        </RelativeLayout>
    </RelativeLayout>
</layout>
