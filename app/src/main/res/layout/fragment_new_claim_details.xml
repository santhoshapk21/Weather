<?xml version="1.0" encoding="utf-8"?>
<layout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_bg"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_12sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_10sdp">


                <LinearLayout
                    android:id="@+id/ll_form_place"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:background="#fff"
                    android:orientation="vertical">

                    <hrms.hrms.widget.TextView
                        style="@style/spinnerHeader"
                        android:text="@string/claim_type" />

                    <RelativeLayout style="@style/SpinnerRl">

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/fragment_new_claim_details_spn_claim_type"
                            style="@style/Spinner" />
                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_toRightOf="@+id/ll_form_place"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:orientation="vertical">

                    <hrms.hrms.widget.TextView
                        style="@style/spinnerHeader"
                        android:text="@string/amount" />

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:background="@drawable/bottomline">

                        <hrms.hrms.widget.EditText
                            android:id="@+id/frgment_new_claim_details_ed_amount"
                            style="@style/SpinnerBody"
                            android:hint="@string/_100"
                            android:inputType="number" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/ll_form_place"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:orientation="vertical">

                    <hrms.hrms.widget.TextView
                        style="@style/spinnerHeader"
                        android:text="@string/eligible_amount" />

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_12sdp">

                        <hrms.hrms.widget.TextView
                            android:id="@+id/frgment_new_claim_details_tv_eligibleamount"
                            style="@style/SpinnerBody"
                            android:text="0"
                            android:textColor="@color/request_leave_type_text" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout style="@style/linearDescription">

                <hrms.hrms.widget.TextView
                    style="@style/spinnerHeader"
                    android:text="@string/recieptno" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:background="@drawable/bottomline">

                    <hrms.hrms.widget.EditText
                        android:id="@+id/frgment_new_claim_details_ed_reciept_no"
                        style="@style/SpinnerBody"
                        android:hint="123456" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout style="@style/linearDescription">

                <hrms.hrms.widget.TextView
                    style="@style/spinnerHeader"
                    android:text="@string/description" />

                <hrms.hrms.widget.EditText
                    android:id="@+id/frgment_new_claim_details_ed_desc"
                    style="@style/spinnerBodyMultiline"
                    android:hint="Take a Lunch At  1:30">

                </hrms.hrms.widget.EditText>

            </LinearLayout>

            <LinearLayout style="@style/linearDescription">

                <LinearLayout
                    android:id="@+id/frg_new_claim_details_ll_imageselection"
                    style="@style/linearDescription">

                    <hrms.hrms.widget.TextView
                        style="@style/spinnerHeader"
                        android:text="@string/attachment_ur_file" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp">

                        <LinearLayout
                            android:id="@+id/fragment_new_claim_details_ll_gallery"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/_8sdp">

                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@drawable/ic_gallery" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:background="@color/view_line" />

                        <LinearLayout
                            android:id="@+id/fragment_new_claim_details_ll_camera"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:src="@drawable/ic_camera">

                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@drawable/ic_camera" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/fragment_new_claim_details_fl_selectedpicview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/fragment_new_claim_details_iv_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_round_plus" />

                    <ImageView
                        android:id="@+id/fragment_new_claim_details_iv_cancel"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="right|top"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_close" />

                </FrameLayout>
            </LinearLayout>


            <hrms.hrms.widget.TextView
                android:id="@+id/fragment_new_claim_details_tv_add_claim"
                style="@style/btn_submit"
                android:text="@string/add_claim_Details"
                android:textAllCaps="true" />
        </LinearLayout>

    </ScrollView>
</layout>