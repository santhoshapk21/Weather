<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/row_home_cv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardElevation="@dimen/_1sdp"
        app:cardPreventCornerOverlap="true"
        card_view:cardCornerRadius="@dimen/_8sdp">

        <LinearLayout
            android:id="@+id/row_home_ll_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_14sdp"
            android:paddingTop="@dimen/_14sdp">

            <FrameLayout
                android:layout_width="@dimen/_75sdp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/row_home_iv_menu"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:padding="@dimen/_4sdp"
                     />

                <hrms.hrms.widget.TextView
                    android:id="@+id/row_home_tv_notification_count"
                    android:layout_width="wrap_content"
                    android:minWidth="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_request_count_circle"
                    android:gravity="center"
                    android:padding="@dimen/_4sdp"
                    app:font_type="@string/open_sarif"
                    android:text="0"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:textColor="#3c4a64"
                    />

            </FrameLayout>

            <hrms.hrms.widget.TextView
                android:id="@+id/row_home_tv_menu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#3A3A3A"
                android:textSize="@dimen/_11sdp"
                app:font_type="@string/open_sarif" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>