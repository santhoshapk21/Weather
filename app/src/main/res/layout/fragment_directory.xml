<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true">

        <RelativeLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_15sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fragment_directory_iv_search"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_search" />

                <hrms.hrms.widget.EditText
                    android:id="@+id/fragment_directory_ed_search"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@android:color/transparent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:hint="Search Employee Here"
                    android:padding="@dimen/_4sdp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/_12sdp"
                    app:font_type="@string/gotham_medium" />
            </LinearLayout>

        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_directory_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_search"
            android:layout_above="@+id/frg_directory_ll_loading_more"
            />


        <hrms.hrms.widget.TextView
            android:id="@+id/frg_tv_no_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_search"
            android:gravity="center"
            android:text="@string/no_data"
            android:textColor="@color/login_tv_hint"
            android:textSize="@dimen/_20sdp"
            android:visibility="gone"
            app:font_type="@string/gotham_medium" />

        <hrms.wang.avi.AVLoadingIndicatorView
            android:id="@+id/frg_directory_lv_loading_search"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_13sdp"
            app:indicatorColor="@color/blue"
            app:indicatorName="BallSpinFadeLoaderIndicator"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ll_search"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/frg_directory_ll_loading_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/_4sdp">

            <hrms.wang.avi.AVLoadingIndicatorView
                android:id="@+id/frg_directory_lv_loading_more"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                app:indicatorColor="@color/blue"
                android:visibility="gone"
                app:indicatorName="BallSpinFadeLoaderIndicator"
                />
        </LinearLayout>
    </RelativeLayout>
</layout>