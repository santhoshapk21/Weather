<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="100dp"
        android:padding="10dp"
        android:background="@drawable/bg_rounded_corner"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="start|center"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_humidity_label"
                style="@style/LabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_sunrise"
                android:textSize="20sp"/>


            <TextView
                android:id="@+id/tv_humidity_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/DefaultTextStyle"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                tools:text="5:11 AM" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="start|center"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pressure_label"
                style="@style/LabelStyle"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_pressure" />



            <TextView
                android:id="@+id/tv_pressure_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/DefaultTextStyle"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                tools:text="5:11 AM" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:minHeight="100dp"
        android:padding="10dp"
        android:background="@drawable/bg_rounded_corner"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="start|center"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_visibility_label"
                style="@style/LabelStyle"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_visibility" />


            <TextView
                android:id="@+id/tv_visibility_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/DefaultTextStyle"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                tools:text="5:11 AM" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="start|center"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_feels_like_label"
                style="@style/LabelStyle"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_feelsLike" />


            <TextView
                android:id="@+id/tv_feels_like_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/DefaultTextStyle"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                tools:text="5:11 AM" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="100dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/bg_rounded_corner"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="start|center"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_temp_min_label"
                style="@style/LabelStyle"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_temp_min" />

            <TextView
                android:id="@+id/tv_temp_min_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/DefaultTextStyle"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                tools:text="5:11 AM" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="start|center"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_temp_max_label"
                style="@style/LabelStyle"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_tempMax" />


            <TextView
                android:id="@+id/tv_temp_max_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/DefaultTextStyle"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                tools:text="5:11 AM" />

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_rounded_corner">

        <TextView
            android:id="@+id/tv_sunrise_label"
            style="@style/LabelStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_sunrise"
            app:layout_constraintEnd_toEndOf="@id/iv_sunrise"
            app:layout_constraintStart_toStartOf="@id/iv_sunrise"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_sunrise"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="36dp"
            android:src="@drawable/ic_sunrise"
            app:layout_constraintEnd_toStartOf="@id/iv_sunset"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_sunrise_label" />

        <TextView
            android:id="@+id/tv_sunrise_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/iv_sunrise"
            app:layout_constraintStart_toStartOf="@id/iv_sunrise"
            app:layout_constraintTop_toBottomOf="@+id/iv_sunrise"
            tools:text="5:11 AM" />

        <TextView
            android:id="@+id/tv_sunset_label"
            style="@style/LabelStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_sunset"
            app:layout_constraintEnd_toEndOf="@id/iv_sunset"
            app:layout_constraintStart_toStartOf="@id/iv_sunset"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_sunset"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="36dp"
            android:src="@drawable/ic_sunset"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_sunrise"
            app:layout_constraintTop_toBottomOf="@+id/tv_sunset_label" />

        <TextView
            android:id="@+id/tv_sunset_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/iv_sunset"
            app:layout_constraintStart_toStartOf="@id/iv_sunset"
            app:layout_constraintTop_toBottomOf="@+id/iv_sunset"
            tools:text="6:47 PM" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>